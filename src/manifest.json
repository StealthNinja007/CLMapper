{
    "name": "CLMapper",
    "version": "1.2.0.1",
    "manifest_version": 2,
    "description": "Craigslist posts shown on a map.",
    "content_scripts": [
        {
            "matches": [ "*://*.craigslist.org/*", "*://*.craigslist.com/*", "*://*.craigslist.com.ph/*", "*://*.craigslist.com.sg/*", "*://*.craigslist.com.tw/*", "*://*.craigslist.com.tr/*", "*://*.craigslist.com.mx/*", "*://*.craigslist.com.pe/*", "*://*.craigslist.com.cn/*", "*://*.craigslist.com.au/*", "*://*.craigslist.com.ph/*", "*://*.craigslist.co.in/*", "*://*.craigslist.co.uk/*", "*://*.craigslist.co.za/*", "*://*.craigslist.ca/*", "*://*.craigslist.hk/*", "*://*.craigslist.jp/*", "*://*.craigslist.at/*", "*://*.craigslist.be/*", "*://*.craigslist.dk/*", "*://*.craigslist.fi/*", "*://*.craigslist.fr/*", "*://*.craigslist.de/*", "*://*.craigslist.gr/*", "*://*.craigslist.it/*", "*://*.craigslist.pl/*", "*://*.craigslist.pt/*", "*://*.craigslist.es/*", "*://*.craigslist.se/*", "*://*.craigslist.ch/*", "*://*.craigslist.tr/*" ],
            "include_globs": [
                "*/hhh*",
                "*/apa*",
                "*/roo*",
                "*/sub*",
                "*/hsw*",
                "*/swp*",
                "*/vac*",
                "*/prk*",
                "*/off*",
                "*/rea*",
                "*/aap*",
                "*/abo*",
                "*/nfb*",
                "*/fee*",
                "*/nfa*",
                "*/aiv*"
            ],
            "exclude_matches": [
                "*://www.craigslist.org/*",
                "*://craigslist.org/*"
            ],
            "css": ["bootstrap.css", "content_script.css"],
            "js": [
                "jquery.js",
                "PageInterface.js",
                "content_script.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "pages/hhh/index.js"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [ "*://*.craigslist.org/*", "*://*.craigslist.com/*", "*://*.craigslist.com.ph/*", "*://*.craigslist.com.sg/*", "*://*.craigslist.com.tw/*", "*://*.craigslist.com.tr/*", "*://*.craigslist.com.mx/*", "*://*.craigslist.com.pe/*", "*://*.craigslist.com.cn/*", "*://*.craigslist.com.au/*", "*://*.craigslist.com.ph/*", "*://*.craigslist.co.in/*", "*://*.craigslist.co.uk/*", "*://*.craigslist.co.za/*", "*://*.craigslist.ca/*", "*://*.craigslist.hk/*", "*://*.craigslist.jp/*", "*://*.craigslist.at/*", "*://*.craigslist.be/*", "*://*.craigslist.dk/*", "*://*.craigslist.fi/*", "*://*.craigslist.fr/*", "*://*.craigslist.de/*", "*://*.craigslist.gr/*", "*://*.craigslist.it/*", "*://*.craigslist.pl/*", "*://*.craigslist.pt/*", "*://*.craigslist.es/*", "*://*.craigslist.se/*", "*://*.craigslist.ch/*", "*://*.craigslist.tr/*" ]
}
